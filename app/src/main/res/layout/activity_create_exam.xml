<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/txtExamDuration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtQuestionScore"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtDifficultyLevel"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btnChangePreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Exam Settings" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_view_create"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:scrollbars="vertical"
        android:clickable="true"
        tools:context=".CreateExamActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/examDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:focusable="false"
            android:hint="Select Exam Date"
            android:inputType="date" />

        <EditText
            android:id="@+id/examTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:focusable="false"
            android:hint="Select Exam Time"
            android:inputType="time" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCreateSaveExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create exam" />

</LinearLayout>